{
  "plugins": [
    "stylelint-prettier"
  ],
  "extends": "stylelint-config-standard",
  "rules": {
    "prettier/prettier": true,
    "selector-class-pattern": null,
    "declaration-colon-newline-after": null,
    "no-empty-source": null
  },
  "ignoreFiles": [
    "dist/*",
    "node_modules/*"
  ]
}